<aside class="left-column">
	<div class="sidebar-content">
		<div class="info-content mt-2">
			<h2>Informations:</h2>
			<p>
				<i class="bi bi-calendar-heart-fill"></i>
				<strong>Date de l'article:</strong>
				{{ article.createdAt|format_datetime('full', 'none') }}
			</p>
			<p>
				<i class="bi bi-person-badge-fill"></i>
				<strong>Auteur:</strong>
				{{ article.user.fullName }}
			</p>
		</div>
		{% if article.categories|length > 0 %}
			<div class="categories-article">
				<h2>Cat√©gories:</h2>
				<div class="list-tag">
					{% for categorie in article.categories %}
						<p class="tag">
							<i class="bi bi-tags-fill"></i>
							{{ categorie.titre }}
						</p>
					{% endfor %}
				</div>
			</div>
		{% endif %}
		{% if comments|length > 0 %}
			<div class="show-comments mt-4">
				<h2>{{ comments|length > 1 ? 'Commentaires:' : 'Commentaire:' }}</h2>
				<div class="comments-sidebar-list">
					{% for comment in comments|slice(0,3) %}
						{% include "Frontend/Article/_cardComment.html.twig" %}
					{% endfor %}
				</div>
			</div>
		{% endif %}
	</div>
</aside>
