{{ form_start(form) }}

{{ form_row(form.titre) }}
{{ form_row(form.categories) }}

<div class="row mb-4">
	<div class="col-md-12">
		{{ form_label(form.images) }}
		<ul id="image-fields-list" class="d-flex flex-wrap gap-2 justify-content-between" data-prototype="{{ form_widget(form.images.vars.prototype)|e }}" data-widget-tags="{{ '<li class="w-30 image-fields"></li>'|e }}" data-widget-counter="{{ form.images|length }}">
			{% for imageField in form.images %}
				<li class="list-image w-30">
					<a class="js-remove-image btn btn-danger">
						<span class="fa fa-close"></span>
					</a>
					{{ form_errors(imageField) }}
					{{ form_widget(imageField) }}
				</li>
			{% endfor %}
		</ul>
		<button type="button" class="btn btn-primary add-another-collection-widget" data-list-selector="#image-fields-list">Ajouter une image</button>
	</div>
</div>

<div class="mb-3">
	<label for="article[content]">Contenu:</label>
	<div id="ckeditor" class="ckeditor-input">
		{{ form.content.vars.value|raw }}
	</div>
	{{ form_row(form.content) }}
</div>

<div class="text-center">
	<button type="submit" class="btn btn-primary btn-inline">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
