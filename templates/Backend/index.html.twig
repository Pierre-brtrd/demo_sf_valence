{% extends "layout.html.twig" %}

{% block title %}
	Admin |
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}
	<section class="container-fluid mt-4 js-filter">
		<h1 class="text-center">Administration des articles</h1>
		<div>
			<a href="{{ path('admin.article.create') }}" class="btn btn-primary">Cr√©er un article</a>
		</div>
		<div class="row mt-4">
			<div class="col-md-3">
				{% include "Components/_filter.html.twig" with {form: form} only %}
			</div>
			<div class="col-md-9">
				<div class="d-flex justify-content-between mb-2 navigation-blog-list">
					{% include "Components/_count.html.twig" %}
					<div class="d-flex justify-content-end gap-2 js-filter-sortable">
						{% include "Components/_sortable.html.twig" %}
					</div>
				</div>
				<div class="blog-list js-filter-content">
					{% include "Components/_articles.html.twig" with { admin: true } %}
				</div>
				{% include "Components/_pagination.html.twig" %}
			</div>
		</div>
	</section>
{% endblock %}
