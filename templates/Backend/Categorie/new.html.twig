{% extends "layout.html.twig" %}

{% block title %}
	Admin Catégorie |
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('admin') }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<div class="card p-3 w-50 mx-auto">
			<h1 class="text-center">Créer une Categorie</h1>
			{% include 'Backend/Categorie/_form.html.twig' with { button_label: "Créer" } %}
		</div>
		<a href="{{ path('app_categorie_index') }}" class="btn btn-primary text-light">Retour à la liste</a>
	</section>
{% endblock %}
