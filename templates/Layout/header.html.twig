<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{ path('home') }}">My app Symfony</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
				<div class="navbar-nav">
					<a class="nav-link active" aria-current="page" href="{{ path('home') }}">Home</a>
				</div>
			</div>
			{% if app.user %}
				{% if is_granted('ROLE_ADMIN') %}
					<div class="dropdown me-2">
						<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
							<i class="bi bi-tools"></i>
							Admin
						</button>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{ path('admin.user.index') }}">
									<i class="bi bi-people-fill"></i>
									Gérer les utilisateurs
								</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path('admin') }}">
									<i class="bi bi-newspaper"></i>
									Articles
								</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path('app_categorie_index') }}">
									<i class="bi bi-tags-fill"></i>
									Catégories
								</a>
							</li>
						</ul>
					</div>
				{% endif %}
				<div class="navbar-btn me-2">
					<a href="{{ path('app.user.compte') }}" class="btn btn-light">
						<i class="bi bi-person-badge-fill"></i>
						Compte
					</a>
				</div>
				<div class="navbar-btn">
					<a href="{{ path('logout') }}" class="btn btn-danger">
						<i class="bi bi-door-open-fill"></i>
						Se deconnecter
					</a>
				</div>
			{% else %}
				<div class="navbar-btn me-2">
					<a href="{{ path('login') }}" class="btn btn-secondary">
						<i class="bi bi-box-arrow-in-right"></i>
						Login
					</a>
				</div>
				<div class="navbar-btn">
					<a href="{{ path('register') }}" class="btn btn-light">
						<i class="bi bi-person-plus"></i>
						SignUp
					</a>
				</div>
			{% endif %}
		</div>
	</nav>
</header>
